
@{
    ViewBag.Title = "Add Employee";
}

<style type="text/css">
    label {
        font-weight: bold;
    }
</style>

<h3>Add Employee</h3>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <label>Employee name</label>
        </div>
        <div class="col-md-3">
            @Html.TextBox("txtEmpName", null, new { style = "width: 100%;" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <label>Date of birth</label>
        </div>
        <div class="col-md-3">
            @Html.TextBox("txtDOB", null, new { style = "width: 100%;", disabled = false })
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <label>Gender</label>
        </div>
        <div class="col-md-3">
            <input type="radio" name="Gender" value="Male" style="margin:10px;" /><label style="padding:0px 10px 0px 0px;">Male</label>
            <input type="radio" name="Gender" value="Female" style="margin:10px;" /><label style="padding:0px 10px 0px 0px;">Female</label>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <label>Designation</label>
        </div>
        <div class="col-md-3">
            @Html.DropDownList("drpDesignation", (IEnumerable<SelectListItem>)ViewBag.DesignationList, "Select designation", new { style = "width:100%;" })
        </div>
        <div class="col-md-3">
            <label>Reporting person/manager</label>
        </div>
        <div class="col-md-3">
            <select style="width:100%;">
                <option>Select manager</option>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <label>Salary(yearly)</label>
        </div>
        <div class="col-md-3">
            @Html.TextBox("txtSalary", null, new { style = "width:100%;", onkeypress = "return IsNumberEntered(event)" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <label>Employment status</label>
        </div>
        <div class="col-md-3">
            @Html.DropDownList("drpEmploymentStatus", (IEnumerable<SelectListItem>)ViewBag.EmploymentStatusList, "Select employment status", new { style = "width:100%;" })
        </div>
    </div>
</div>

<script type="text/javascript">
    function IsNumberEntered(event) {
        var charCode = event.which ? event.which : event.keyCode;

        if (charCode > 31 && (charCode < 48 || charCode > 57)) {
            return false;
        }

        return true;
    }
</script>

